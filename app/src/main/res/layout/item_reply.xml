<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_reply_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="6dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:background="#FFFFFF">

    <!-- 대댓글 프로필 이미지 -->
    <ImageView
        android:id="@+id/img_reply_profile"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_profile_placeholder"
        android:background="@drawable/bg_profile_circle"
        android:scaleType="centerCrop" />

    <!-- 이름, 시간, 내용 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 이름 + 시간 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_reply_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ReplyUser"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1시간 전"
                android:textSize="11sp"
                android:textColor="#77AA77"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- 내용 -->
        <TextView
            android:id="@+id/tv_reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대댓글 내용입니다."
            android:textSize="13sp"
            android:textColor="#333333"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</LinearLayout>
