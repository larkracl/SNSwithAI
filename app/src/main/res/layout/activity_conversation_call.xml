<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app   ="http://schemas.android.com/apk/res-auto"
    xmlns:tools ="http://schemas.android.com/tools">

    <data>
        <variable name="imagePath"          type="String"/>
        <variable name="charName"           type="String"/>
        <variable name="charDescription"    type="String"/>
        <variable name="charPersonality"    type="String"/>
        <variable name="charAge"          type="String"/>
        <variable name="charHobby"        type="String"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 0) 프로필 이미지 (cover) -->
        <ImageView
            android:id="@+id/ivCharacterImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            app:imagePath="@{imagePath}"
            android:contentDescription="@string/character_image_desc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"/>

        <!-- 캐릭터 이름 -->
        <TextView
            android:id="@+id/tvCharacterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{charName}"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/ivCharacterImage"
            app:layout_constraintStart_toEndOf="@id/ivCharacterImage"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 캐릭터 설명 -->
        <TextView
            android:id="@+id/tvCharacterDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{charDescription}"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvCharacterName"
            app:layout_constraintStart_toStartOf="@id/tvCharacterName"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 캐릭터 성격 -->
        <TextView
            android:id="@+id/tvCharacterPersonality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{charPersonality}"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvCharacterDescription"
            app:layout_constraintStart_toStartOf="@id/tvCharacterDescription"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 나이 표시 -->
        <TextView
            android:id="@+id/tvCharacterAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`Age: ` + charAge}"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvCharacterPersonality"
            app:layout_constraintStart_toStartOf="@id/tvCharacterPersonality"
            android:layout_marginTop="4dp"/>

        <!-- 취미 표시 -->
        <TextView
            android:id="@+id/tvCharacterHobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`Hobby: ` + charHobby}"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvCharacterAge"
            app:layout_constraintStart_toStartOf="@id/tvCharacterAge"
            android:layout_marginTop="2dp"/>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/input_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCharacterHobby"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/conversation_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:accessibilityLiveRegion="polite"
                android:contentDescription="@string/conversation_log_desc"
                android:padding="16dp"
                android:textIsSelectable="true"
                android:textSize="16sp"
                tools:text="(대화 내용이 여기에 표시됩니다)" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 3-1) 마이크 버튼: 48dp로 확대 -->
            <ImageButton
                android:id="@+id/btn_mic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_baseline_mic_24"
                android:contentDescription="@string/mic_button_desc"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"/>

            <!-- 3-2) 메시지 입력창: 높이 48dp -->
            <EditText
                android:id="@+id/message_input"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="메시지를 입력하거나 마이크 클릭"
                android:imeOptions="actionSend"/>

            <!-- 3-3) 전송 버튼: 기본 Material 버튼은 이미 48dp 이상 -->
            <Button
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="전송"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>